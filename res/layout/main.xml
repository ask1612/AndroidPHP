<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/orange">
<!--Label of LoginHeader-->
 <TextView
        android:id="@+id/txtLoginHeader"
        android:text="@string/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
 />
<!--Label of UserName-->

    <TextView
        android:id="@+id/txtUserName"
        android:text="@string/user_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtLoginHeader"
        android:layout_alignParentRight="false"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5sp"
        android:textColor="@color/black"
    />
    
<!--Label of UserPassword-->
    <TextView
        android:id="@+id/txtUserPassword"
        android:text="@string/user_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtUserName"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="5sp"
        android:textColor="@color/black"
    />

<!--Edit of UserName-->

    <EditText
        android:id="@+id/edtUserName"
        android:hint="@string/user_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtLoginHeader"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:inputType="text"
    />

<!--Edit of UserPassword-->

    <EditText
        android:id="@+id/edtUserPassword"
        android:hint="@string/user_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_below="@+id/txtUserName"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textColor="@color/black"
    />

<!--Button of Login-->
    <Button
        android:id="@+id/btnLogin"
        android:text="@string/login"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btnRegister"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
    />

<!--Button  of Register-->
    <Button
        android:id="@+id/btnRegister"
        android:text="@string/register"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtUserPassword"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/btnLogin"
    />
</RelativeLayout>